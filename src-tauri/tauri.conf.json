{
    "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
    "build": {
        "beforeBuildCommand": "pnpm run schema && pnpm run build",
        "beforeDevCommand": "pnpm run schema && pnpm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../dist"
    },
    "package": {
        "productName": "New Horizons Config Editor",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "os": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$APP/*",
                    "$CONFIG/*"
                ]
            },
            "path": {
                "all": true
            },
            "process": {
                "exit": true,
                "relaunch": true
            },
            "shell": {
                "open": true
            },
            "window": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.bwc9876.nh-config-editor",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [
                "resources/**/*.*"
            ],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": false,
                "title": "Welcome",
                "url": "index.html#START",
                "minWidth": 1100,
                "width": 1100,
                "height": 650,
                "minHeight": 650,
                "center": true,
                "maximized": true
            }
        ]
    }
}